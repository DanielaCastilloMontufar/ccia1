    <section class="reservar1 relative flex items-center" id="reservar">
        <div class="container text-center">
            <h2>Solicitar <span>sección ahora</span></h2>
            <div class="w-100 pt-4 inline-flex">
                <a href=""><button class="inline btn btn-primario btn-login">Soy socio</button></a>
                <a href="/beneficios/" class="ml-8 mt-2 flex btn-secundario"><i><Arrow/></i> Aún no soy socio</a>
            </div>
        </div>
    </section>

    <section class="formFerias" id="form">
